{
    "environment": {
        "name": "snake",
        "config": {
            "field_width": 15,
            "field_height": 10
        }
    },

    "algorithm": {
        "name": "gae",
        "config": {
            "width": 302,
            "plot_keys": ["length"],
            "info_keys": ["wall", "eat_self", "no_eat", "max_length"],

            "seed": 42,
            "gamma": 0.9,
            "trace_decay": 0.9,

            "learning_rate": 0.003,
            "optimizer": "adam",

            "agent_architecture": [
                {"type": "dense", "size": 128, "activation": "relu"},
                {"type": "dense", "size": 128, "activation": "relu"}
            ]
        }
    }
}
