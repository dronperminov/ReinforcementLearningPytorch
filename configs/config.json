{
    "environment": {
        "name": "snake",
        "config": {
            "field_width": 15,
            "field_height": 10,
            "use_conv": false
        }
    },

    "view_config": {
        "width": 302,
        "height": 202,
        "plot_rewards": false,
        "plot_keys": ["length"],
        "info_keys": ["wall", "eat_self", "no_eat", "max_length"],
        "columns": 3,
        "caption": "Snake (vector input)"
    },

    "common_algorithms_params": {
        "seed": 42,
        "gamma": 0.9,

        "optimizer": "adam",
        "learning_rate": 0.003,

        "agent_architecture": [
            {"type": "dense", "size": 128, "activation": "relu"},
            {"type": "dense", "size": 128, "activation": "relu"}
        ]
    },

    "algorithms": [
        {
            "name": "reinforce"
        },

        {
            "name": "actor_critic"
        },

        {
            "name": "a2c"
        },

        {
            "name": "ppo",
            "ppo_steps": 10,
            "ppo_clip": 0.2
        },

        {
            "name": "gae",
            "trace_decay": 0.9
        },

        {
            "name": "dqn",
            "ddqn": false,

            "batch_size": 64,
            "min_replay_size": 1000,
            "max_replay_size": 10000,

            "max_epsilon": 1,
            "min_epsilon": 0.001,
            "decay": 0.001,

            "train_model_period": 4,
            "update_target_model_period": 100
        },

        {
            "name": "dqn",
            "ddqn": true,

            "batch_size": 64,
            "min_replay_size": 1000,
            "max_replay_size": 10000,

            "max_epsilon": 1,
            "min_epsilon": 0.001,
            "decay": 0.001,

            "train_model_period": 4,
            "update_target_model_period": 100
        },

        {
            "name": "dqn",
            "ddqn": false,

            "batch_size": 64,
            "min_replay_size": 1000,
            "max_replay_size": 10000,

            "max_epsilon": 1,
            "min_epsilon": 0.001,
            "decay": 0.001,
            "tau": 1e-3,

            "train_model_period": 4,
            "update_target_model_period": 500
        },

        {
            "name": "dqn",
            "ddqn": true,

            "batch_size": 64,
            "min_replay_size": 1000,
            "max_replay_size": 10000,

            "max_epsilon": 1,
            "min_epsilon": 0.001,
            "decay": 0.001,
            "tau": 1e-3,

            "train_model_period": 4,
            "update_target_model_period": 500
        }
    ]
}
