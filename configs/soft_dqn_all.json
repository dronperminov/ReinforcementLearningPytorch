{
    "environment": {
        "name": "snake",
        "config": {
            "field_width": 15,
            "field_height": 10,
            "frames_count": 0
        }
    },

    "view_config": {
        "width": 212,
        "height": 142,
        "use_gui": true,
        "plot_rewards": true,
        "plot_keys": ["length"],
        "info_keys": ["wall", "eat_self", "no_eat", "length", "max_length"],
        "columns": 2,
        "caption": "Snake"
    },

    "common_algorithms_params": {
        "name": "dqn",
        "gamma": 0.99,
        "seed": 42,

        "optimizer": "adam",
        "learning_rate": 0.001,

        "agent_architecture": [
            {"type": "dense", "size": 256, "activation": "leaky-relu"},
            {"type": "dense", "size": 256, "activation": "leaky-relu"}
        ],

        "batch_size": 64,
        "min_replay_size": 1000,
        "max_replay_size": 50000,

        "max_epsilon": 1,
        "min_epsilon": 0.05,
        "decay": 0.001,
        "tau": 1e-3,

        "train_model_period": 4,
        "update_target_model_period": 4
    },

